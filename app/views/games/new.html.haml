.container
  .row
    .col-xs-12.text-center.new_game_wrapper
      %h2 Create a New Game
      = form_for(@game) do |f|
        .row
          .col
            = text_field_tag :username, nil, class: "input-lg", placeholder: "Player Name", required: true
        .row
          .col
            = f.submit class: "btn btn-lg btn-success"
        .row{style: "margin-top: 30px;"}
          .col-xs-12.options_wrapper
            - if I18n.locale == :en_tish
              %p 
                %i Default rules are more friendly for beginners

            = render 'options_table', form: true
